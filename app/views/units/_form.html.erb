<%= form_for(@unit) do |f| %>

    <div class="form-group">
    <%= f.label (t "units.name") + " *" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label t "mixed_fields.info" %><br>
    <%= f.text_area :info %>
  </div>
  <div class="form-group">
    <%= f.label t "units.phone_number" %><br>
    <%= f.text_field :phone_number %>
  </div>
  <div class="actions">

    <%= link_to 'Back', units_path,class:'btn btn-primary' %>
    <%= link_to 'Show', @unit, class:'btn btn-info'%>
    <%= f.button :submit => "", class:'btn btn-success', style:"margin-left:230px;"%>
  </div>
<% end %>
