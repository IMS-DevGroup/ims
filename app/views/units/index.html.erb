<p id="notice"><%= notice %></p>

<h1>Listing Units</h1>

<table id="units" class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Info</th>
      <th>Phone number</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @units.each do |unit| %>
      <tr>
        <td><%= unit.name %></td>
        <td><%= unit.info %></td>
        <td><%= unit.phone_number %></td>
        <td><%= link_to 'Show', unit, class: 'btn btn-info' %>
        <%= link_to 'Edit', edit_unit_path(unit), class: 'btn btn-warning' %>
        <%= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Unit', new_unit_path, class: 'btn btn-success' %>
