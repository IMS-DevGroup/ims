<%= form_for(@property) do |f| %>
  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
      <% @property.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :info %><br>
    <%= f.text_area :info %>
  </div>
  <div class="field">
    <%= f.label :data_type %>
    <%= f.collection_select :data_type_id, DataType.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :device_type %>
    <%= f.collection_select :device_type_id, DeviceType.all, :id, :name, include_blank: "choose device_type"%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
