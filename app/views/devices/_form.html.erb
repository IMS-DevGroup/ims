<%= form_for(@device) do |f| %>

    <div class="form-group">
    <%= f.label t "devices.device_type" %><br>
    <%= f.collection_select :device_type_id, DeviceType.all, :id, :name, { prompt: 'Select device type' },
                            class: 'form-control' %>
  </div>

  <table id="properties">
  </table>

  <div class="form-group">
    <%= f.label t "mixed_fields.info" %><br>
    <%= f.text_area :info %>
  </div>

  <div class="form-group">
    <%= f.label (t "devices.owner") + " *" %><br>
    <%= f.collection_select :owner_id, Stock.all, :id, :name, { prompt: 'Select owner stock' }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label (t "devices.stock") + " *" %><br>
    <%= f.collection_select :stock_id, Stock.all, :id, :name, { prompt: 'Select stock' }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label (t "devices.ready") + " *" %><br>
    <%= f.check_box :ready %>
  </div>

  <div class="actions">
    <a href="/devices/"><button type="button" class="btn btn-primary" >Back</button></a>
    <%= link_to 'Show', @device, class: 'btn btn-info' %>
    <%= f.button id: 'submit', submit: '', class: 'btn btn-success', style: 'margin-left:230px' %>
  </div>
<% end %>
