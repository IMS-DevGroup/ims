<p id="notice"><%= notice %></p>

<h1>Listing Operations</h1>

<table width="900px">
  <thead>
    <tr>
      <th>User</th>
      <th>Number</th>
      <th>Type</th>
      <th>Location</th>
      <th>Info</th>
      <th>Close date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @operations.each do |operation| %>
      <tr>
        <td><%= if !(operation.user.nil?) then operation.user.prename end %></td>
        <td><%= operation.number %></td>
        <td><%= operation.operation_type %></td>
        <td><%= operation.location %></td>
        <td><%= operation.info %></td>
        <td><%= operation.close_date %></td>
        <td><%= link_to 'Show', operation %></td>
        <td><%= link_to 'Edit', edit_operation_path(operation) %></td>
        <td><%= link_to 'Destroy', operation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

