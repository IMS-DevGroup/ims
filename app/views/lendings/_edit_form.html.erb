<%= form_for(@lending) do |f| %>
    <% if @lending.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@lending.errors.count, "error") %> prohibited this lending from being saved:</h2>

          <ul>
            <% @lending.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :label_text, (t "mixed_fields.user") %><br>
      <%= f.text_field :user_id %>
    </div>

    <div class="form-group">
      <%= f.label :label_text, (t "mixed_fields.device") %><br>
      <%= f.text_field :device_id %>
    </div>

    <div class="form-group">
      <%= f.label :label_text, (t "lendings.lending_info") %><br>
      <%= f.text_area :lending_info %>
    </div>

    <div class="form-group">
      <%= f.label :label_text, (t "lendings.show.lender") %><br>
      <%= f.text_field :lender_id %>
    </div>


    <div class="form-group">
      <%= f.label :label_text, (t "lendings.receive_info") %><br>
      <%= f.text_area :receive_info %>
    </div>

    <div class="form-group">
      <%= f.label :label_text, (t "lendings.borrowed_to") %><br>
      <%= f.text_field :receiver_id %>
    </div>

    <div class="actions">

      <a href="/lendings/"><button type="button" class="btn btn-primary"><%= (t "buttons.back") %></button></a>
      <% if !current_page?(new_lending_path) %><%= link_to (t "buttons.show"), @lending, class: 'btn btn-info' %><% end %>
      <%= f.submit (t "buttons.submit"), class: 'btn btn-success', style: "margin-left:230px;" %>
    </div>
<% end %>