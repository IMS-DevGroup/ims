<%= form_for(@right) do |f| %>
  <% if @right.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@right.errors.count, "error") %> prohibited this right from being saved:</h2>

      <ul>
      <% @right.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">

    <%= f.check_box :manage_rights %>
    <span title="Darf Rechte vergeben"><%=f.label :manage_rights, (t 'rights.manage_rights')%></span><br>

  </div>
  <div class="field">
    <%= f.check_box :manage_users %>
    <span title="User anlegen und bearbeiten"><%= f.label :manage_users, (t 'rights.manage_users') %></span><br>
  </div>
  <div class="field">
    <%= f.check_box :manage_devices %>
    <span title="Geräte anlegen und bearbeiten"><%= f.label :manage_devices, (t 'rights.manage_devices') %></span><br>

  </div>
  <div class="field">
    <%= f.check_box :manage_device_types %>
    <span title="Gerätetypen anlegen und bearbeiten"><%= f.label :manage_device_types, (t 'rights.manage_device_types') %></span><br>

  </div>
  <div class="field">
    <%= f.check_box :manage_stocks_and_units %>
    <span title="Einheiten und Standorte anlegen und bearbeiten"> <%= f.label :manage_stocks_and_units, (t 'rights.manage_stocks_and_units') %></span><br>

  </div>
  <div class="field">
    <%= f.check_box :manage_operations %>
    <span title="Einsätze anlegen und bearbeiten"><%= f.label :manage_operations, (t 'rights.manage_operations') %></span><br>

  </div>
    <div class="field">
      <%= f.check_box :manage_boss %>
      <span title="System Einstellungen bearbeiten"><%= f.label :manage_boss, (t 'rights.manage_boss') %></span><br>

    </div>
    <br>
  <div class="actions">

    <%= link_to (t 'buttons.back'), edit_user_path(@right.user), class:'btn btn-primary' %>
    <%= f.submit (t 'buttons.submit'), class:'btn btn-success', style:"margin-left:230px;"%>

  </div>
<% end %>
