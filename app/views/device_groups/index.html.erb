<p id="notice"><%= notice %></p>

<h1>Listing Device Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Info</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @device_groups.each do |device_group| %>
      <tr>
        <td><%= device_group.name %></td>
        <td><%= device_group.info %></td>
        <td><%= link_to 'Show', device_group %></td>
        <td><%= link_to 'Edit', edit_device_group_path(device_group) %></td>
        <td><%= link_to 'Destroy', device_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

