<p id="notice"><%= notice %></p>

<table class="stockCreation" width=300 height=100>
  <tr>
    <td>
      <p>
      <strong><%= (t "mixed_fields.name") + ":" %></strong>
      <%= @stock.name %>
      </p>
    </td>
    <td>
      <p>
      <strong><%= (t "stocks.unit") + ":" %></strong>
        <% unless @stock.unit.nil?%>
            <%= @stock.unit.name %>
        <%end%>
      </p>
    </td>
    <td>
      <p>
      <strong><%= (t "mixed_fields.info") + ":" %></strong>
      <%= @stock.info %>
      </p>
    </td>
    <td>
      <p>
        <strong><%= (t "stocks.city") + ":" %></strong>
        <%= @stock.city %>
      </p>
    </td>
    <td>
      <p>
        <strong><%= (t "stocks.street") + ":" %></strong>
        <%= @stock.street %>
      </p>
    </td>
  </tr>
</table>

<%= link_to (t "buttons.back"), stocks_path, class:'btn btn-primary' %>
<%= link_to (t "buttons.edit"), edit_stock_path(@stock), class:'btn btn-warning' %>

