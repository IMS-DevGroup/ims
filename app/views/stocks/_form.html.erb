<%= form_for(@stock) do |f| %>

    <table>
      <tr>
        <td>
          <div class="form-group">
            <%= f.label :name %><br>
            <%= f.text_field :name %>
          </div>
        </td>
      </tr>
      <td>
        <tr>
          <div class="form-group">
            <%= f.label :info %><br>
            <%= f.text_area :info %>
          </div>
          </td>
        </tr>
        <tr>
          <td>
            <div class="form-group">
              <%= f.label :unit %><br>
              <%= f.collection_select :unit_id, Unit.all, :id, :name, {}, class: "form-control", include_blank: "choose unit" %>
            </div>
          </td>
        </tr>
        <tr>
          <td>
            <div class="actions">
              <%= link_to 'Show', @stock , class:'btn btn-info'%>
              <%= link_to 'Back', stocks_path , class:'btn btn-primary'%>

              <%= f.button :submit => "", class:'btn btn-success', style:"margin-left:230px;"%>
            </div>
          </td>
        </tr>
    </table>
<% end %>
